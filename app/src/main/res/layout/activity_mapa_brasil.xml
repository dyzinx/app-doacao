<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/mapaContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="16dp">

        <!-- Exemplo de estados posicionados -->
        <ImageView
            android:id="@+id/estado_ac"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="180dp"
            android:layout_marginStart="0dp"
            android:src="@drawable/estado_ac"
            android:contentDescription="AC" />

        <ImageView
            android:id="@+id/estado_am"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginTop="150dp"
            android:layout_marginStart="80dp"
            android:src="@drawable/estado_am"
            android:contentDescription="AM" />

        <!-- Continue com os outros estados aqui... -->

    </FrameLayout>
</ScrollView>
